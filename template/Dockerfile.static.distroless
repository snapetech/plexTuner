# Static build with distroless base (Google's distroless)
FROM golang:1.24-alpine AS build
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY . .
# Replace ./cmd/your-app with your actual main package path
RUN CGO_ENABLED=0 go build -ldflags='-w -s' -o /your-app ./cmd/your-app

FROM gcr.io/distroless/static:nonroot
COPY --from=build /your-app /your-app
EXPOSE 8080
USER nonroot:nonroot
ENTRYPOINT ["/your-app"]
